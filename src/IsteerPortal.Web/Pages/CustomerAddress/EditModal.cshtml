@page
@using Microsoft.AspNetCore.Mvc.Localization
@using IsteerPortal.Localization
@using IsteerPortal.Web.Pages.CustomerAddress
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using IsteerPortal.CustomerAddress;
@using System.Globalization
@inject IHtmlLocalizer<IsteerPortalResource> L
@model EditModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/CustomerAddress/EditModal" autocomplete="off">
    <abp-modal id="CustomerAddresEditModal">
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>

        <abp-modal-body>
                    <abp-input asp-for="Id" />
                    <abp-input asp-for="CustomerAddres.ConcurrencyStamp" hidden="true" suppress-label="true"/>
                    

            <abp-input asp-for="CustomerAddres.Address1" text-area  />


            <abp-input asp-for="CustomerAddres.Address2" text-area  />


            <abp-input asp-for="CustomerAddres.ZIPCODE"   />

                                <abp-select asp-for="CustomerAddres.CustomerId" asp-items="Model.CustomerLookupList" label="@L["Customer"].Value"/>
                
        </abp-modal-body>

        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>